<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="timeline.azahar.com.systemManager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:name="timeline.azahar.com.systemManager.app.MyApplication"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="timeline.azahar.com.systemManager.ui.MainActivity"
            android:launchMode="singleTask" />

        <service android:name="timeline.azahar.com.systemManager.service.AppService" />
        <service android:name="timeline.azahar.com.systemManager.service.AlarmService" />
        <receiver
            android:name="timeline.azahar.com.systemManager.receiver.AlarmReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="ALARM_RECEIVER" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.appsflyer.SingleInstallBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <activity
            android:name="timeline.azahar.com.systemManager.ui.SettingsActivity"
            android:parentActivityName="timeline.azahar.com.systemManager.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="timeline.azahar.com.systemManager.ui.MainActivity" />
        </activity>
        <activity
            android:name="timeline.azahar.com.systemManager.ui.DetailActivity"
            android:parentActivityName="timeline.azahar.com.systemManager.ui.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="timeline.azahar.com.systemManager.ui.MainActivity" />
        </activity>
        <activity
            android:name="timeline.azahar.com.systemManager.ui.IgnoreActivity"
            android:parentActivityName="timeline.azahar.com.systemManager.ui.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="timeline.azahar.com.systemManager.ui.SettingsActivity" />
        </activity>
        <activity
            android:name="timeline.azahar.com.systemManager.ui.AboutActivity"
            android:parentActivityName="timeline.azahar.com.systemManager.ui.SettingsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="timeline.azahar.com.systemManager.ui.SettingsActivity" />
        </activity>
        <activity
            android:name="timeline.azahar.com.systemManager.ui.SplashActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_launcher" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

    </application>

</manifest>